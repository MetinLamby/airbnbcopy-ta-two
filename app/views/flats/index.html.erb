<div class="small-banner">
  <h1>Our Flats</h1>
  <p>Rent your flat now!</p>
</div>


<div class="content">

  <div class="container", style="margin-bottom: 50px;">
    <div class="row">
      <div class="cards">
        <% @flats.each do |flat| %>
        <div class="col-lg-12 col-md-12 col-sm-12">
          <%= link_to flat_path(flat) do  %>
          <div class="flat-card">
            <div class="flat-card-product-image">
              <!-- flat image goes here -->
            </div>
            <div class="flat-card-info">
              <div>
                <h4 class="flat-name"><%= flat.description.capitalize %></h4>
              </div>
              <div>
                <p><%= flat.address %></p>
              </div>
            </div>
            <div class="flat-card-price">
              <p class="price"><%= flat.price %>â‚¬</p>
              <p id="red-flats" class="add-btn">Check it out</p>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>



  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>



<div>
  <%= link_to "Add a new flat", new_flat_path %>
</div>


