<%= simple_form_for [@flat, @booking] do |f| %>
  <% if @flat.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @flat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :comment %>
  <%= f.submit "Book this flat", class: "btn btn-primary" %>
<% end %>
