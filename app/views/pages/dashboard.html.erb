<h1 style="text-align: center; margin: 40px;">Welcome to your dashboard</h1>

<h3 style="margin-left: 30px;">My Bookings</h3>

<div class="container", style="margin-bottom: 50px;">
  <div class="row">


    <% if @bookings.empty? %>
      <p>You do not have any bookings</p>
    <% else %>
    <% @bookings.each do |booking| %>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <%= link_to flat_path(booking.flat) do  %>
      <div class="flat-card">
        <div class="flat-card-product-image">
          <!-- flat image goes here -->
        </div>
        <div class="flat-card-info">
          <div>
            <h4 class="flat-name"><%= booking.flat.name.capitalize %></h4>
          </div>
          <div>
            <p>Booking comment: <%= booking.comment %></p>
          </div>
        </div>
        <div class="flat-card-price">
          <p class="price"><%= booking.flat.price %>€</p>
          <p id="red-flats" class="add-btn">Check out the flat</p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

    <% end %>
  </div>
</div>


<h3 style="margin-left: 30px;">My Flats</h3>

<div class="container", style="margin-bottom: 50px;">
  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <%= link_to flat_path(flat) do  %>
      <div class="flat-card">
        <div class="flat-card-product-image">
          <!-- flat image goes here -->
        </div>
        <div class="flat-card-info">
          <div>
            <h4 class="flat-name"><%= flat.name.capitalize %></h4>
          </div>
          <div>
            <p><%= flat.description %></p>
          </div>
        </div>
        <div class="flat-card-price">
          <p class="price"><%= flat.price %>€</p>
          <p id="red-flats" class="add-btn">Check out the flat</p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>


